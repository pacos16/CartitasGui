<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCocheListItem"
        android:layout_width="88dp"
        android:layout_height="99dp"
        app:srcCompat="@drawable/_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:id="@+id/tvMarca"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <TextView
            android:id="@+id/tvModelo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:weightSum="120">

                    <TextView
                        android:id="@+id/tvMotor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40" />

                    <TextView
                        android:id="@+id/tvCilindros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40" />

                    <TextView
                        android:id="@+id/tvPotencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:weightSum="120">

                    <TextView
                        android:id="@+id/tvRevoluciones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40" />

                    <TextView
                        android:id="@+id/tvVelocidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40" />

                    <TextView
                        android:id="@+id/tvConsumo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="40" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>