<?xml version="1.0" encoding="utf-8"?>
<!--
    Desde Android 8 solo se permiten conexiones https.
    Para aceptar conexiones http hay que indicar una configuraciÃ³n de red
    declarando expresamente desde que dominios se aceptan conexiones http.
-->
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">"192.168.0.100</domain>
        <domain includeSubdomains="true">"192.168.0.100:8080</domain>
        <domain includeSubdomains="true">"192.168.0.100:8080/ApiRESTFul/rest/</domain>
    </domain-config>
</network-security-config>